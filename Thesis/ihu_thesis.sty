    numbers=left,
    numberstyle=\tiny\color{gray},
    stepnumber=1,
    numbersep=10pt,
    showstringspaces=false,
    breaklines=true,
    frame=single,
    backgroundcolor=\color{white},
    tabsize=2,
    keywords={false,true,null},
    morecomment=[s]{/*}{*/},
    morecomment=[l]//,
    morestring=[b]",
    % Highlighting keys vs values is complex in listings, 
    % so we keep it clean and academic.
