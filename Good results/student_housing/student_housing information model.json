            "datatype": "xsd:decimal"
          },
          {
            "path": [
              "hasParent",
              "ownsRealEstate",
              "propertyAreaM2"
            ],
            "datatype": "xsd:decimal"
          }
        ]
      },
      {
        "name": "family_property_location_population",
        "related_paths": [
          {
            "path": [
              "ownsRealEstate",
              "propertyLocation",
              "municipalityPopulation"
            ],
            "datatype": "xsd:integer"
          },
          {
            "path": [
              "hasParent",
              "ownsRealEstate",
              "propertyLocation",
              "municipalityPopulation"
            ],
            "datatype": "xsd:integer"
          }
        ]
      }
    ]
  }
