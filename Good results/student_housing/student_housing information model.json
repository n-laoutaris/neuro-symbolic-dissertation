[
  {
    "name": "citizenship_condition",
    "desc": "The student must be a citizen of Greece or another European Union country.",
    "constrains": [
      {
        "name": "applicant_citizenship",
        "related_paths": [
          {
            "path": [
              "citizenshipCountry"
            ],
            "datatype": "xsd:string"
          }
        ]
      }
    ]
  },
  {
    "name": "academic_enrollment_condition",
    "desc": "The student must be enrolled in a Higher Education Institution (AEI) and possess a valid academic ID.",
    "constrains": [
      {
        "name": "has_valid_academic_id",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "hasValidAcademicID"
            ],
            "datatype": "xsd:boolean"
          }
        ]
      }
    ]
  },
  {
    "name": "academic_performance_condition",
    "desc": "The student must have successfully passed exams in at least half of the courses of the preceding academic year for which the allowance is requested.",
    "constrains": [
      {
        "name": "passed_courses_count",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "passedCoursesCount"
            ],
            "datatype": "xsd:integer"
          }
        ]
      },
      {
        "name": "total_courses_count",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "totalCoursesCount"
            ],
            "datatype": "xsd:integer"
          }
        ]
      }
    ]
  },
  {
    "name": "family_income_condition",
    "desc": "The annual family income of the previous year must not exceed €30,000. This limit is increased by €3,000 for each dependent child after the first.",
    "constrains": [
      {
        "name": "total_family_income",
        "related_paths": [
          {
            "path": [
              "hasIncome",
              "amount"
            ],
            "datatype": "xsd:decimal"
          },
          {
            "path": [
              "hasParent",
              "hasIncome",
              "amount"
            ],
            "datatype": "xsd:decimal"
          }
        ]
      },
      {
        "name": "is_dependent_child_of_parents",
        "related_paths": [
          {
            "path": [
              "hasParent",
              "hasChild",
              "isDependent"
            ],
            "datatype": "xsd:boolean"
          }
        ]
      }
    ]
  },
  {
    "name": "residence_location_condition",
    "desc": "The student must reside in a rented property due to their studies in a city different from their family's main residence. The lease must be valid for at least six months.",
    "constrains": [
      {
        "name": "student_residence_type",
        "related_paths": [
          {
            "path": [
              "hasCurrentResidence",
              "residenceType"
            ],
            "datatype": "xsd:string"
          }
        ]
      },
      {
        "name": "student_residence_city",
        "related_paths": [
          {
            "path": [
              "hasCurrentResidence",
              "locatedIn"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "family_residence_city",
        "related_paths": [
          {
            "path": [
              "hasFamilyResidence",
              "locatedIn"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "lease_start_date",
        "related_paths": [
          {
            "path": [
              "hasCurrentResidence",
              "leaseStartDate"
            ],
            "datatype": "xsd:date"
          }
        ]
      }
    ]
  },
  {
    "name": "no_owned_residence_in_study_city_condition",
    "desc": "Neither the student nor their parents may have full ownership or usufruct of a residence in the city of study.",
    "constrains": [
      {
        "name": "city_of_study",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "isEnrolledAt"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "location_of_family_owned_properties",
        "related_paths": [
          {
            "path": [
              "ownsRealEstate",
              "propertyLocation"
            ],
            "datatype": "URI"
          },
          {
            "path": [
              "hasParent",
              "ownsRealEstate",
              "propertyLocation"
            ],
            "datatype": "URI"
          }
        ]
      }
    ]
  },
  {
    "name": "total_property_area_condition",
    "desc": "The total real estate property (owner-occupied or rented out) owned by the student or their parents must not exceed 200 sq.m. This limit excludes properties located in municipalities with a population of less than 3,000.",
    "constrains": [
      {
        "name": "family_property_area",
        "related_paths": [
          {
            "path": [
              "ownsRealEstate",
              "propertyAreaM2"
