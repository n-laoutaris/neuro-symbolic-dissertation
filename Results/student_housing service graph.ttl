@prefix ex: <http://example.org/> .
@prefix cccev: <http://data.europa.eu/m8g/> .
@prefix cpsv: <http://purl.org/vocab/cpsv#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:Student_Housing_Allowance a cpsv:PublicService .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:citizenship_condition .
ex:citizenship_condition a cccev:Constraint ; dct:description "The student must be a Greek citizen or a citizen of another European Union country." .
ex:citizenship_condition cccev:constrains ex:applicant_citizenship .
ex:applicant_citizenship a cccev:InformationConcept .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:academic_status_condition .
ex:academic_status_condition a cccev:Constraint ; dct:description "The student must be enrolled in a Higher Education Institution (HEI) and possess a valid academic ID." .
ex:academic_status_condition cccev:constrains ex:enrollment_status .
ex:enrollment_status a cccev:InformationConcept .
ex:academic_status_condition cccev:constrains ex:academic_id_status .
ex:academic_id_status a cccev:InformationConcept .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:academic_progress_condition .
ex:academic_progress_condition a cccev:Constraint ; dct:description "The student must have successfully passed exams for at least half of the required courses from the previous academic year." .
ex:academic_progress_condition cccev:constrains ex:passed_courses_count .
ex:passed_courses_count a cccev:InformationConcept .
ex:academic_progress_condition cccev:constrains ex:total_courses_count .
ex:total_courses_count a cccev:InformationConcept .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:residence_and_lease_condition .
ex:residence_and_lease_condition a cccev:Constraint ; dct:description "The student must be renting accommodation in a city different from their primary family residence, and the lease must be valid for at least six months." .
ex:residence_and_lease_condition cccev:constrains ex:current_residence_city .
ex:current_residence_city a cccev:InformationConcept .
ex:residence_and_lease_condition cccev:constrains ex:family_residence_city .
ex:family_residence_city a cccev:InformationConcept .
ex:residence_and_lease_condition cccev:constrains ex:current_residence_type .
ex:current_residence_type a cccev:InformationConcept .
ex:residence_and_lease_condition cccev:constrains ex:lease_start_date .
ex:lease_start_date a cccev:InformationConcept .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:no_property_ownership_in_study_city_condition .
ex:no_property_ownership_in_study_city_condition a cccev:Constraint ; dct:description "Neither the student nor their parents can have full ownership or usufruct of a property in the city where the student is studying." .
ex:no_property_ownership_in_study_city_condition cccev:constrains ex:city_of_study .
ex:city_of_study a cccev:InformationConcept .
ex:no_property_ownership_in_study_city_condition cccev:constrains ex:owned_property_locations .
ex:owned_property_locations a cccev:InformationConcept .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:family_income_limit_condition .
ex:family_income_limit_condition a cccev:Constraint ; dct:description "The annual family income must not exceed €30,000, with this limit increasing by €3,000 for each dependent child after the first." .
ex:family_income_limit_condition cccev:constrains ex:aggregated_family_income .
ex:aggregated_family_income a cccev:InformationConcept .
ex:family_income_limit_condition cccev:constrains ex:dependent_child_status .
ex:dependent_child_status a cccev:InformationConcept .

ex:Student_Housing_Allowance cpsv:holdsRequirement ex:total_property_area_limit_condition .
ex:total_property_area_limit_condition a cccev:Constraint ; dct:description "The total area of real estate (owner-occupied or rented out) owned by the student or their parents must not cumulatively exceed 200 square meters. (This limit excludes properties located in a municipality or community with a population of less than 3,000 inhabitants)." .
ex:total_property_area_limit_condition cccev:constrains ex:aggregated_property_area .
ex:aggregated_property_area a cccev:InformationConcept .
ex:total_property_area_limit_condition cccev:constrains ex:property_location_population .
ex:property_location_population a cccev:InformationConcept .

