[
  {
    "name": "citizenship_condition",
    "desc": "The student must be a Greek citizen or a citizen of another European Union country.",
    "constrains": [
      {
        "name": "applicant_citizenship",
        "related_paths": [
          {
            "path": [
              "citizenshipCountry"
            ],
            "datatype": "xsd:string"
          }
        ]
      }
    ]
  },
  {
    "name": "academic_status_condition",
    "desc": "The student must be enrolled in a Higher Education Institution (HEI) and possess a valid academic ID.",
    "constrains": [
      {
        "name": "enrollment_status",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "isEnrolledAt"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "academic_id_status",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "hasValidAcademicID"
            ],
            "datatype": "xsd:boolean"
          }
        ]
      }
    ]
  },
  {
    "name": "academic_progress_condition",
    "desc": "The student must have successfully passed exams for at least half of the required courses from the previous academic year.",
    "constrains": [
      {
        "name": "passed_courses_count",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "passedCoursesCount"
            ],
            "datatype": "xsd:integer"
          }
        ]
      },
      {
        "name": "total_courses_count",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "totalCoursesCount"
            ],
            "datatype": "xsd:integer"
          }
        ]
      }
    ]
  },
  {
    "name": "residence_and_lease_condition",
    "desc": "The student must be renting accommodation in a city different from their primary family residence, and the lease must be valid for at least six months.",
    "constrains": [
      {
        "name": "current_residence_city",
        "related_paths": [
          {
            "path": [
              "hasCurrentResidence",
              "locatedIn"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "family_residence_city",
        "related_paths": [
          {
            "path": [
              "hasFamilyResidence",
              "locatedIn"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "current_residence_type",
        "related_paths": [
          {
            "path": [
              "hasCurrentResidence",
              "residenceType"
            ],
            "datatype": "xsd:string"
          }
        ]
      },
      {
        "name": "lease_start_date",
        "related_paths": [
          {
            "path": [
              "hasCurrentResidence",
              "leaseStartDate"
            ],
            "datatype": "xsd:date"
          }
        ]
      }
    ]
  },
  {
    "name": "no_property_ownership_in_study_city_condition",
    "desc": "Neither the student nor their parents can have full ownership or usufruct of a property in the city where the student is studying.",
    "constrains": [
      {
        "name": "city_of_study",
        "related_paths": [
          {
            "path": [
              "hasEducation",
              "isEnrolledAt"
            ],
            "datatype": "URI"
          }
        ]
      },
      {
        "name": "owned_property_locations",
        "related_paths": [
          {
            "path": [
              "ownsRealEstate",
              "propertyLocation"
            ],
            "datatype": "URI"
          },
          {
            "path": [
              "hasParent",
              "ownsRealEstate",
              "propertyLocation"
            ],
            "datatype": "URI"
          }
        ]
      }
    ]
  },
  {
    "name": "family_income_limit_condition",
    "desc": "The annual family income must not exceed €30,000, with this limit increasing by €3,000 for each dependent child after the first.",
    "constrains": [
      {
        "name": "aggregated_family_income",
        "related_paths": [
          {
            "path": [
              "hasIncome",
              "amount"
            ],
            "datatype": "xsd:decimal"
          },
          {
            "path": [
              "hasParent",
              "hasIncome",
              "amount"
            ],
            "datatype": "xsd:decimal"
          }
        ]
      },
      {
        "name": "dependent_child_status",
        "related_paths": [
          {
            "path": [
              "hasParent",
              "hasChild",
              "isDependent"
            ],
            "datatype": "xsd:boolean"
          }
        ]
      }
    ]
  },
  {
    "name": "total_property_area_limit_condition",
    "desc": "The total area of real estate (owner-occupied or rented out) owned by the student or their parents must not cumulatively exceed 200 square meters. (This limit excludes properties located in a municipality or community with a population of less than 3,000 inhabitants).",
    "constrains": [
      {
        "name": "aggregated_property_area",
        "related_paths": [
          {
            "path": [
              "ownsRealEstate",
              "propertyAreaM2"
            ],
            "datatype": "xsd:decimal"
          },
          {
            "path": [
              "hasParent",
              "ownsRealEstate",
              "propertyAreaM2"
            ],
            "datatype": "xsd:decimal"
          }
        ]
      },
      {
        "name": "property_location_population",
        "related_paths": [
          {
            "path": [
              "ownsRealEstate",
              "propertyLocation",
              "municipalityPopulation"
            ],
            "datatype": "xsd:integer"
          },
          {
            "path": [
              "hasParent",
              "ownsRealEstate",
              "propertyLocation",
              "municipalityPopulation"
            ],
            "datatype": "xsd:integer"
          }
        ]
      }
    ]
  }
]